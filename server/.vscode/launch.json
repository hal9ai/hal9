{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hal9'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hal9",
                    "--package=hal9"
                ],
                "filter": {
                    "name": "hal9",
                    "kind": "bin"
                }
            },
            "args": [ "start", "app1" ],
            "cwd": "${workspaceFolder}"
        }
    ]
}