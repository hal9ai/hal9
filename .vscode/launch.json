    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/server/target/debug/hal9",
            "args": [
                "start",
                "server/examples/my_app"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "cwd": "${workspaceFolder}/py/",
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}